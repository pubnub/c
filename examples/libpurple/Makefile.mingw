#
# Makefile.mingw
#
# Description: Makefile for win32 (mingw) version of libcampfire
#

DEFINES += -D__APPLE_CC__=0 -DPURPLE_PLUGINS

PIDGIN_TREE_TOP := ../../..
include $(PIDGIN_TREE_TOP)/libpurple/win32/global.mak

TARGET = libpubnub
TYPE = PLUGIN

# Static or Plugin...
ifeq ($(TYPE),STATIC)
  DEFINES += -DSTATIC
  DLL_INSTALL_DIR =	$(PURPLE_INSTALL_DIR)
else
ifeq ($(TYPE),PLUGIN)
  DLL_INSTALL_DIR =	$(PURPLE_INSTALL_PLUGINS_DIR)
endif
endif

##
## INCLUDE PATHS
##
INCLUDE_PATHS +=	-I. \
			-I$(GTK_TOP)/include \
			-I$(GTK_TOP)/include/glib-2.0 \
			-I$(GTK_TOP)/lib/glib-2.0/include \
			-I$(PURPLE_TOP) \
			-I$(PURPLE_TOP)/.. \
			-I$(PURPLE_TOP)/win32 \
			-I$(PIDGIN_TREE_TOP)/../win32-dev/json-c \
			-I$(PIDGIN_TREE_TOP)/../c/libpubnub

LIB_PATHS +=		-L$(GTK_TOP)/lib \
			-L$(PURPLE_TOP) \
			-L$(PIDGIN_TREE_TOP)/../c/libpubnub \
			-L$(PIDGIN_TREE_TOP)/../win32-dev/json-c \
			-L$(PIDGIN_TREE_TOP)/../win32-dev/curl-7.30.0-devel-mingw32/lib

##
##  SOURCES, OBJECTS
##
C_SRC =	pubnub.c \
	events.c

OBJECTS = $(C_SRC:%.c=%.o)

##
## LIBRARIES
##
LIBS =	\
	-lglib-2.0 \
	-lintl \
	-lpurple \
	-lpubnub \
	-lcrypto \
	-ljson \
	-lcurldll


ifeq ($(CYRUS_SASL), 1)
INCLUDE_PATHS += -I$(CYRUS_SASL_TOP)/include
LIB_PATHS += -L$(CYRUS_SASL_TOP)/bin
LIBS += -llibsasl
endif

include $(PIDGIN_COMMON_RULES)

##
## TARGET DEFINITIONS
##
.PHONY: all install clean

all: $(TARGET).dll

install: all $(DLL_INSTALL_DIR)
	cp $(TARGET).dll $(DLL_INSTALL_DIR)

$(OBJECTS): $(PURPLE_CONFIG_H)

##
## BUILD DLL
##
$(TARGET).dll: $(PURPLE_DLL).a $(OBJECTS)
	$(CC) -shared $(OBJECTS) $(LIB_PATHS) $(LIBS) $(DLL_LD_FLAGS) -Wl,--allow-multiple-definition -o $(TARGET).dll

##
## CLEAN RULES
##

clean:
	rm -f $(OBJECTS)
	rm -f $(TARGET).dll

include $(PIDGIN_COMMON_TARGETS)
